{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2020",
        "noEmitOnError": true,
        "removeComments": true,
        "strict": false,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "types": ["reflect-metadata"],
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/*",
        "src/**/*",
        "src/types/**/*"
    ]
}